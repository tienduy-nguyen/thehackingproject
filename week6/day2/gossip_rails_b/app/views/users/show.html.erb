<!DOCTYPE html>
<html>

<head>
  <% content_for :title, "Utilisateur" %>
</head>

<body>

  <div class="container mt-4">
    <h4>Author profile:</h4>

    <div class="row">
      <div class="card border-success mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= @user.first_name %> <%= @user.last_name%></div>
      <div class="card-body text-success">
        <h6 class="card-title">Age: <%= @user.age %></h6>
        <h6 class="card-title">Email: <%= @user.email %></h6>
        <h6 class="card-title">City: <%= @user.city.name %></h6>
        <p class="card-text text-muted"><%= @user.description %></p>
      </div>
    </div>
    </div>
    

    <!-- List gossip -->
    <h3 class="mt-4 mb-4">List gossips of<%= @user.first_name %></h3>
    <% @user.gossips.each do |gossip|%>
    <div class="row my-3">
      <div class="col-md-12">
        <div class="card p-2">
          <div class="card-body d-flex m-0 p-0">

            <div class="col-md-1 pt-2">
              <div class="ml-auto d-flex">
                Id: <%=gossip.id%>
              </div>
            </div>

            <div class="col-md-11">
                <div class="card-text">
                <%= link_to gossip_path(:id => gossip.id)  do %>
                    <span><strong style="color:#000;">Title:</strong></span><span class='text-muted'> <%= gossip.title %></span>
                <% end %>
          
                </div>
              <div class="card-body m-0 px-0  pt-2 pb-0 ">
                 <span><strong>Content:</strong></span><span class="text-muted"> <%= gossip.content %></span>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
    <%end%>
  </div>


</body>

</html>

<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user) %> |
